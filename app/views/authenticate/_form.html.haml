= form_for @user, url: signin_path, html: { id: :signin, class: "form-horizontal" }, method: :post do |f|
  .form-group
    = f.email_field :email, class: "form-control", placeholder: "Email"
  .form-group
    = f.password_field :password, class: "form-control", placeholder: "Password"
  .form-group
    = f.check_box :remember_me
    = f.label :remember_me
  = f.button "Connect", class: "btn btn-success pull-right"

